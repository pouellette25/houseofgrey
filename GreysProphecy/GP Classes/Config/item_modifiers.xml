<greysprophecy>
  <append xpath="/item_modifiers">
    <item_modifier name="modEnchantingThorns" installable_tags="armor" modifier_tags="resistance" type="attachment">
      <property name="CustomIcon" value="modThorns"/>
      <property name="UnlockedBy" value="perkEnchanting"/>
      <property name="Stacknumber" value="1"/>
      <property name="Group" value="Mods"/>
      <property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>

      <effect_group tiered="false">
        <requirement name="EntityTagCompare" target="other" tags="zombie"/>
        <requirement name="RandomRoll" seed_type="Random" target="self" min_max="0,100" operation="LTE" value="20"/>
        <triggered_effect trigger="onOtherAttackedSelf" target="other" action="AddBuff" buff="buffInjuryBleedingZombie" />
      </effect_group>
    </item_modifier>

    <item_modifier name="modEnchantingShockArmor" installable_tags="armor" modifier_tags="resistance" type="attachment">
      <property name="CustomIcon" value="modShockRobe"/>
      <property name="UnlockedBy" value="perkEnchanting"/>
      <property name="Stacknumber" value="1"/>
      <property name="Group" value="Mods"/>
      <property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>

      <effect_group tiered="false">
        <requirement name="EntityTagCompare" target="other" tags="zombie"/>
        <requirement name="RandomRoll" seed_type="Random" target="self" min_max="0,100" operation="LTE" value="20"/>
        <triggered_effect trigger="onOtherAttackedSelf" action="AddBuff" target="other" buff="buffShocked" />
      </effect_group>
    </item_modifier>

    <item_modifier name="modEnchantingIceWeapon" installable_tags="melee" modifier_tags="damage" type="attachment">
      <property name="CustomIcon" value="modIceWeapon"/>
      <property name="UnlockedBy" value="perkEnchanting"/>
      <property name="Stacknumber" value="1"/>
      <property name="Group" value="Mods"/>
      <property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>

      <effect_group tiered="false">
        <requirement name="RandomRoll" seed_type="Random" target="self" min_max="0,100" operation="LTE" value="20"/>
        <triggered_effect trigger="onSelfPrimaryActionRayHit" action="AddBuff" target="other" buff="buffChilled"/>
      </effect_group>
      <effect_group tiered="false" name="Power Attack">
        <requirement name="RandomRoll" seed_type="Random" target="self" min_max="0,100" operation="LTE" value="40"/>
        <triggered_effect trigger="onSelfSecondaryActionRayHit" action="AddBuff" target="other" buff="buffChilled"/>
      </effect_group>
      <effect_group tiered="false" name="Always extend bleeding">
        <requirement name="HasBuff" target="other" buff="buffInjuryBleeding"/>
        <triggered_effect trigger="onSelfPrimaryActionRayHit" action="AddBuff" target="other" buff="buffChilled"/>
        <triggered_effect trigger="onSelfSecondaryActionRayHit" action="AddBuff" target="other" buff="buffChilled"/>
      </effect_group>
    </item_modifier>

    <item_modifier name="modEnchantingShockArrows" installable_tags="perkArchery" modifier_tags="damage" type="attachment">
      <property name="CustomIcon" value="modShockArrow"/>
      <property name="UnlockedBy" value="perkEnchanting"/>
      <property name="Stacknumber" value="1"/>
      <property name="Group" value="Mods"/>
      <property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>

      <effect_group tiered="false">
        <requirement name="RandomRoll" seed_type="Random" target="self" min_max="0,100" operation="LTE" value="20"/>
        <triggered_effect trigger="onSelfDamagedOther" action="AddBuff" target="other" buff="buffShocked" />
      </effect_group>

    </item_modifier>

    <item_modifier name="modEnchantingThunderArrows" installable_tags="perkArchery" modifier_tags="damage" type="attachment">
      <property name="CustomIcon" value="modThunderArrow"/>
      <property name="UnlockedBy" value="perkEnchanting"/>
      <property name="Stacknumber" value="1"/>
      <property name="Group" value="Mods"/>
      <property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
      <property name="DeathForceMultiplier" value="20" />

      <effect_group tiered="false">
        <triggered_effect trigger="onSelfDamagedOther" action="AddBuff" target="other" buff="buffShockwave" />
      </effect_group>
      <effect_group tiered="false">
        <triggered_effect trigger="onSelfDamagedOther" action="AddBuff" target="other" buff="buffInjuryKnockdown01">
          <requirement name="RandomRoll" seed_type="Random" target="self" min_max="0,100" operation="LTE" value="100"/>
          <requirement name="HoldingItemHasTags" tags="perkArchery"/>
        </triggered_effect>
      </effect_group>
    </item_modifier>
  </append>
</greysprophecy>