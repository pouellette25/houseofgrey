<greysprophecy>
  <set xpath="/blocks/block[@name='forge']/property[@class='Workstation']/property[@name='InputMaterials']/@value">iron,brass,lead,glass,stone,clay,copper,zinc</set>
  
  <append xpath="/blocks/block[@name='terrStone']">
    <drop event="Harvest" name="resourceScrapCopper" count="2,4" prob="0.2" tag="oreWoodHarvest"/>
    <drop event="Harvest" name="resourceScrapZinc" count="2,4" prob="0.2" tag="oreWoodHarvest"/>
  </append>

  <append xpath="/blocks/block[@name='terrOreIron']">
    <drop event="Harvest" name="resourceScrapZinc" count="2,4" prob="0.2" tag="oreWoodHarvest"/>
  </append>

  <append xpath="/blocks/block[@name='terrOreLead']">
    <drop event="Harvest" name="resourceScrapZinc" count="2,4" prob="0.2" tag="oreWoodHarvest"/>
  </append>

  <append xpath="/blocks/block[@name='terrOreCoal']">
    <drop event="Harvest" name="resourceScrapZinc" count="2,4" prob="0.2" tag="oreWoodHarvest"/>
  </append>

  <append xpath="/blocks/block[@name='terrOrePotassiumNitrate']">
    <drop event="Harvest" name="resourceScrapZinc" count="2,4" prob="0.2" tag="oreWoodHarvest"/>
  </append>

  <append xpath="/blocks/block[@name='terrOreOilDeposit']">
    <drop event="Harvest" name="resourceScrapZinc" count="2,4" prob="0.2" tag="oreWoodHarvest"/>
  </append>
</greysprophecy>